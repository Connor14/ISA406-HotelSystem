@page
@model HotelSystem.Pages.Hotel.Reservation.CreateReservationModel
@{
    ViewData["Title"] = "CreateReservation";
}

<!-- begin header -->
<h1>@Model.Hotel.Name</h1>

<div class="row">
    <div class="col-md-3">
        <p>@Model.Hotel.Street</p>
        <p>@Model.Hotel.State, @Model.Hotel.ZipCode</p>
    </div>
    <div class="col">
        <p>This could show pictures of the hotel and more detailed information</p>
    </div>
</div>

<ul class="list-inline">
    <li>
        <a class="btn btn-primary" asp-page="/Hotel/HotelMain" role="button">Hotel Home</a>
    </li>
    <li>
        <a class="btn btn-success" asp-page="/Hotel/Reservation/CreateReservation" role="button">Create a Reservation</a>
    </li>
    @{
        if (Model.RoleId == 2)
        {
            <li>
                <a class="btn btn-warning" asp-page="/Hotel/Staff/FrontDesk" role="button">Front Desk</a>
            </li>
        }
    }
</ul>
<!-- end header -->

@{ 
    if(Model.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }
}

<form method="post">
    <div class="row form-group">
        <div class="col-md-6">
            <label for="startDate">Start Date</label>
            <input type="date" id="startDate" name="startDate" class="form-control" />
        </div>

        <div class="col-md-6">
            <label for="endDate">End Date</label>
            <input type="date" id="endDate" name="endDate" class="form-control" />
        </div>
    </div>

    <div class="row form-group">
        <div class="col-md-12 form-group">
            <label for="email">Room Type</label>
            <select name="roomType" class="form-control">
                @foreach (var item in Model.Rooms)
                {
                    <option value="@item.Description">@item.Description</option>
                }
            </select>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-md-10">

        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary" style="width:100%">Reserve Now</button>
        </div>
    </div>
</form>



